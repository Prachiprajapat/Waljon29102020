<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/input">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:isScrollContainer="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="@color/white">




                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rel">




                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:layout_below="@+id/tool"
                                android:background="@drawable/profile_background"
                                >
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:id="@+id/back"
                                    android:layout_margin="2dp"
                                    android:background="@color/white"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_baseline_arrow_back_24">

                                </ImageView>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:id="@+id/edit_background">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="fitXY"
                                       android:id="@+id/img_background">

                                    </ImageView>




                                </LinearLayout>

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:id="@+id/edit"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_margin="2dp"
                                    android:background="@color/white"
                                    android:src="@drawable/ic_baseline_edit_24">

                                </ImageView>



                            </RelativeLayout>




                        </RelativeLayout>



                        <FrameLayout
                            android:id="@+id/card"
                            android:layout_width="160dp"
                            android:layout_height="130dp"
                            android:layout_marginTop="100dp"
                            android:layout_weight="1"
                            android:layout_centerHorizontal="true"
                            android:background="@color/white"
                         >

                            <LinearLayout

                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:layout_weight="1"
                                android:elevation="8dp"
                                android:layout_centerHorizontal="true"
                                android:background="@color/white"
                                android:gravity="center"
                                android:innerRadius="0dp"
                                android:shape="ring"
                                >



                                <ImageView

                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center"
                                    android:padding="20dp"
                                    android:text="Login"
                                    android:id="@+id/img_profile"
                                    android:src="@drawable/ic_user11"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|end"
                                android:id="@+id/edit_profile" >
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@color/white"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/ic_baseline_edit_24">

                                </ImageView>

                            </LinearLayout>



                        </FrameLayout>
                        <Button
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/card"
                            android:layout_below="@id/rel"
                            android:id="@+id/login_signup"
                            android:layout_marginTop="10dp"
                            android:background="@color/dark_blue1"
                            android:layout_marginLeft="20dp"
                            android:text="Login/signup"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:visibility="gone"
                            android:textColor="@color/white">

                        </Button>

                    </RelativeLayout>



                  <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                      android:orientation="vertical">

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                          <RelativeLayout
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:padding="2dp"
                              android:layout_marginRight="20dp"
                              android:layout_marginLeft="20dp"
                              android:background="@drawable/border">

                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="CHANGE"
                                  android:padding="2dp"
                                  android:id="@+id/chngenumber"

                                  android:layout_centerVertical="true"
                                  android:layout_alignParentEnd="true"
                                  android:textColor="@color/dark_blue1"
                                  android:layout_marginRight="20dp"
                                  android:layout_marginTop="5dp"
                                  android:layout_marginLeft="20dp"
                                  android:textStyle="normal"
                                  android:textSize="14sp">

                              </TextView>


                              <LinearLayout
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:id="@+id/linear"
                                  android:padding="2dp">
                                  <TextView
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="Mobile Number"
                                      android:padding="2dp"
                                      android:layout_marginTop="10dp"
                                      android:layout_marginLeft="20dp"
                                      android:textStyle="normal"
                                      android:textSize="10sp">

                                  </TextView>


                                  <RelativeLayout
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:padding="2dp">

                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="9795214589"
                                          android:padding="2dp"
                                          android:id="@+id/number"
                                          android:textColor="@color/black"
                                          android:layout_marginTop="5dp"
                                          android:layout_marginLeft="20dp"
                                          android:textStyle="normal"
                                          android:textSize="12sp">

                                      </TextView>
                                      <de.hdodenhof.circleimageview.CircleImageView
                                          android:layout_width="20dp"
                                          android:layout_height="20dp"
                                          android:layout_marginTop="5dp"
                                          android:layout_marginLeft="10dp"
                                          android:layout_toRightOf="@+id/number"
                                          android:layout_gravity="center_vertical"
                                          android:src="@drawable/ic_check_11"
                                          app:civ_border_color="@color/green"
                                          app:civ_border_width="2dp" />

                                  </RelativeLayout>

                              </LinearLayout>




                      </RelativeLayout>


                          <EditText
                              android:id="@+id/et_fullname"
                              android:layout_width="match_parent"
                              android:layout_height="50dp"
                              android:hint="Full Name "
                              android:inputType="text"
                              android:layout_marginRight="20dp"
                              android:layout_marginLeft="20dp"
                              android:layout_marginTop="20dp"
                              android:background="@drawable/border"
                              android:textColor="@color/black"
                              android:textSize="15dp"
                              android:padding="10dp"
                              app:fontFamily="@font/poppins" />
                          <EditText
                              android:id="@+id/et_email"
                              android:layout_width="match_parent"
                              android:layout_height="50dp"
                              android:hint="Email"
                              android:inputType="text"
                              android:layout_marginRight="20dp"
                              android:layout_marginLeft="20dp"
                              android:layout_marginTop="20dp"
                              android:background="@drawable/border"
                              android:textColor="@color/black"
                              android:textSize="15dp"
                              android:padding="10dp"
                              app:fontFamily="@font/poppins" />

                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_marginTop="2dp"
                              android:weightSum="1">
                              <Button
                                  android:id="@+id/btn_female"
                                  android:layout_width="0dp"
                                  android:layout_height="50dp"
                                  android:hint="Female"
                                  android:enabled="false"
                                  android:textAlignment="center"
                                  android:layout_weight=".5"
                                  android:inputType="textPassword"
                                  android:layout_marginLeft="20dp"
                                  android:layout_marginTop="18dp"
                                  android:background="@drawable/border"
                                  android:textColor="@color/black"
                                  android:textSize="15dp"
                                  android:padding="10dp"
                                  app:fontFamily="@font/poppins" />

                              <Button
                                  android:id="@+id/btn_male"
                                  android:layout_width="0dp"
                                  android:layout_height="50dp"
                                  android:hint="Male"
                                  android:enabled="false"
                                  android:textAlignment="center"
                                  android:layout_weight=".5"
                                  android:inputType="textPassword"
                                  android:layout_marginRight="20dp"
                                  android:layout_marginTop="18dp"
                                  android:background="@drawable/border"
                                  android:textColor="@color/black"
                                  android:textSize="15dp"
                                  android:padding="10dp"
                                  app:fontFamily="@font/poppins" />




                          </LinearLayout>

                          <TextView
                              android:id="@+id/dob"
                              android:layout_width="match_parent"
                              android:layout_height="50dp"
                              android:hint="DOB"
                              android:inputType="text"
                              android:layout_gravity="center_vertical"
                              android:layout_marginRight="20dp"
                              android:layout_marginLeft="20dp"
                              android:layout_marginTop="20dp"
                              android:background="@drawable/border"
                              android:textColor="@color/black"
                              android:textSize="15dp"
                              android:padding="10dp"
                              app:fontFamily="@font/poppins" />

                          <EditText
                              android:id="@+id/et_location"
                              android:layout_width="match_parent"
                              android:layout_height="50dp"
                              android:hint="Location"
                              android:inputType="text"
                              android:layout_gravity="center_vertical"
                              android:layout_marginRight="20dp"
                              android:layout_marginLeft="20dp"
                              android:layout_marginTop="20dp"
                              android:background="@drawable/border"
                              android:textColor="@color/black"
                              android:textSize="15dp"
                              android:padding="10dp"
                              app:fontFamily="@font/poppins" />





                      </LinearLayout>


                  </LinearLayout>




                </LinearLayout>



            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Signup"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_signup"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"
        android:background="@color/dark_blue1"
        android:layout_marginRight="20dp">

    </Button>



</RelativeLayout>